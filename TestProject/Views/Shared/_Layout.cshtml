<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-bottom: 0">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Depts", "Index", "Departments")</li>
                    <li>@Html.ActionLink("Students", "Index", "Students")</li>
                    <li>@Html.ActionLink("Master", "Index", "SubjectMas")</li>
                    <li>@Html.ActionLink("Details", "Index", "SubjectDets")</li>
                    <li>@Html.ActionLink("Age", "Index", "AgeCalculator")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height: calc(100vh - 100px);">
        @RenderBody()
        <hr />
    </div>
    <footer class="navbar-inverse text-center" style="height: 50px; padding-bottom: 0">
        <p style="color: #bbbbbb; padding: 15px 0;">&copy; @DateTime.Now.Year - All Rights Reserved | Test Project </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
